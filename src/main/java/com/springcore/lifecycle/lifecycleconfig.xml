<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
">



<bean class="com.springcore.lifecycle.Animal" name="animal1" init-method="init" destroy-method="destroy">

<property name="id" value="123" />
<property name="name" value="dog"/>
</bean>

<bean class="com.springcore.lifecycle.Bird" name="bird1">
<property name="id" value="456"/>
</bean>

<bean class="com.springcore.lifecycle.ExampleAnnotation" name="example1">
<property name="subject" value="Java"/>
</bean>



</beans>