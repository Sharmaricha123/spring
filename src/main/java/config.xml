<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- value as a element --> 

<bean class="com.springcore.Student" name="student1">

<property name="studentId">
<value>22344</value>
</property>

<property name="studentName">
<value>Rich</value>
</property>

<property name="studentAddress">
<value>Delhi</value>
</property>

</bean>

<!-- Value as a attribute -->

<bean class="com.springcore.Student" name="student2">

<property name="studentId" value="123" />
<property name="studentName" value="Ritik" />
<property name="studentAddress" value="Bangalore" />

</bean>

<bean class="com.springcore.Student" name="student3">
<property name="studentId" value="124" />
<property name="studentName" value="Richa" />
<property name="studentAddress" value="Delhi" />


</bean>

<!-- using p schema -->

<bean class="com.springcore.Student" name="student4" p:studentId="125" p:studentName="Ram" p:studentAddress="Pune"/>

</beans>